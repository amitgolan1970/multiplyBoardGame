<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layoutDirection="ltr"
    tools:context=".MultBoardActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@mipmap/mul_board"
        android:id="@+id/ivMultBoard"
        />

    <Button
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:text="חזרה" android:layout_gravity="center" android:gravity="center"
        android:id="@+id/btnBack"/>

</LinearLayout>